<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    android:padding="16dp">

    <ImageView
        android:id="@+id/marker_phone_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@android:color/holo_green_dark"
        android:src="@android:drawable/stat_sys_phone_call" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/marker_phone_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/marker_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do estabelecimento"
            android:textColor="#212121" />

        <TextView
            android:id="@+id/marker_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="EndereÃ§o do estabelecimento"
            android:textColor="#212121" />

    </LinearLayout>

</RelativeLayout>